@model IEnumerable<news.Models.Article>
@{
    ViewBag.Title = "Index";
}

@foreach (var item in Model)
{
    <div class="container-narrow">
        <div class="container-narrow">
            <div class="row rowfix">
                <div class="col-sm-12 divnews">
                    <h2><strong>@item.Heading</strong></h2>

                    @if (@item.ImgAdress != null)
                    {
                        <img src="@item.ImgAdress" class="picc">
                    }
                    else if (true)
                    {
                        <iframe scrolling="no" src="@item.VideoAdress" width="500" height="300"></iframe>
                    }
                    <div id="divtext">
                        <p>@item.Text</p>
                    </div>
                    <hr>
                    <p class="tagme"> By: @item.Author @item.Date</p>
                </div>
            </div>
        </div>
    </div>
}

